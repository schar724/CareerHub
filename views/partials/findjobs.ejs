<div class="flex flex-row">
  <div class="container my-24 px-6 mx-auto">
    <!-- Section: Design Block -->
    <section class="mb-16">
      <div class="container mx-auto px-6 md:px-12 xl:px-32">
        <div class="text-center text-gray-800">
          <div
            class="block rounded-lg shadow-lg px-6 py-12 md:py-16 md:px-12"
            style="
              margin-top: -170px;
              background: hsla(0, 0%, 100%, 0.7);
              backdrop-filter: blur(30px);
            "
          >
            <h1
              class="text-2xl md:text-3xl xl:text-4xl font-bold tracking-tight mb-12"
            >
              Search Jobs <br />
            </h1>

            <form class="grid grid-cols-7">
              <input
                type="text"
                class="border-black border-2 rounded-lg w-full py-2 px-4 col-span-3"
                placeholder="search jobs..."
                id="jobQuery"
              />
              <input
                type="text"
                class="border-black border-2 rounded-lg w-full py-2 px-4 col-span-3"
                placeholder="search by location..."
                id="locationQuery"
              />

              <button
                type="submit"
                class="bg-tertiary text-white rounded-lg p-2 inline col-span-1"
                id="searchButton"
              >
                Search
              </button>
            </form>

            <div id="cards"></div>
          </div>
        </div>
      </div>
    </section>
    <!-- Section: Design Block -->
  </div>
</div>

<script id="jobCardTemplate" type="text/x-handlebars-template">
  <!-- Card Template -->

  <div
    class="my-4 p-8 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 grid grid-cols-4"
  >
    <div id="company-logo" class="col-span-1 h-20 w-20 justify-evenly">
      <img src={{logo}} alt="company logo" />
    </div>

    <div id="job-info" class="col-span-2">
      <h5
        class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
      >
        {{company_name}}
        -
        {{location}}
      </h5>
      <div class="align-bottom mt-10">
        <p class="mb-3 font-light text-gray-700 dark:text-gray-400 inline">
          <strong>Job Title:</strong>
          {{job_title}}
        </p>
        -
        <p class="mb-3 font-light text-gray-700 dark:text-gray-400 inline">
          <strong>Salary:</strong>
          {{salary_range}}
        </p>

      </div>

    </div>
    <div class="col-span-1">
      <a
        class="learnMore px-5 py-3 my-3 md:mb-0 mr-3 md:mr-2 bg-secondary text-white font-medium text-sm leading-snug uppercase rounded shadow-md hover:bg-primary hover:shadow-lg focus:bg-primary focus:shadow-lg focus:outline-none focus:ring-0 active:bg-primary active:shadow-lg transition duration-150 ease-in-out float-right float"
        data-mdb-ripple="true"
        data-mdb-ripple-color="light"
        href="#!"
        role="button"
        id={{job_id}}
        onclick="showLearnMoreModal()"
      >
        Learn More
      </a>

      <a
        class="px-5 py-3 my-3 md:mb-0 mr-3 md:mr-2 bg-secondary text-white font-medium text-sm leading-snug uppercase rounded shadow-md hover:bg-primary hover:shadow-lg focus:bg-primary focus:shadow-lg focus:outline-none focus:ring-0 active:bg-primary active:shadow-lg transition duration-150 ease-in-out float-right"
        data-mdb-ripple="true"
        data-mdb-ripple-color="light"
        role="button"
        onclick="showApplyModal()"
      >
        Apply Now!
        <svg
          aria-hidden="true"
          class="w-4 h-4 ml-2 mr-1 inline"
          fill="currentColor"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            fill-rule="evenodd"
            d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
            clip-rule="evenodd"
          ></path>
        </svg>
      </a>

    </div>

  </div>
</script>
